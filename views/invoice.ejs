<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
            color: #555;
        }
        .invoice-box table {
            width: 100%;
            line-height: inherit;
            text-align: left;
        }
        .invoice-box table td {
            padding: 5px;
            vertical-align: top;
        }
        .invoice-box table tr td:nth-child(2) {
            text-align: right;
        }
        .invoice-box table tr.top table td {
            padding-bottom: 20px;
        }
        .invoice-box table tr.top table td.title {
            font-size: 45px;
            line-height: 45px;
            color: #333;
        }
        .invoice-box table tr.information table td {
            padding-bottom: 40px;
        }
        .invoice-box table tr.heading td {
            background: #eee;
            border-bottom: 1px solid #ddd;
            font-weight: bold;
        }
        .invoice-box table tr.item td {
            border-bottom: 1px solid #eee;
        }
        .invoice-box table tr.item.last td {
            border-bottom: none;
        }
        .invoice-box table tr.total td:nth-child(2) {
            border-top: 2px solid #eee;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="invoice-box">
        <table>
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="<%= logo %>" style="width:100%; max-width:300px;">
                            </td>
                            <td>
                                Invoice #: <%= invoiceDetails.invoiceNo %><br>
                                Created: <%= invoiceDetails.invoiceDate %><br>
                                Due: <%= invoiceDetails.invoiceDetails %>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                <%= sellerDetails.name %><br>
                                <%= sellerDetails.address %><br>
                                <%= sellerDetails.city %>, <%= sellerDetails.state %> - <%= sellerDetails.pincode %>
                            </td>
                            <td>
                                <%= billingDetails.name %><br>
                                <%= billingDetails.address %><br>
                                <%= billingDetails.city %>, <%= billingDetails.state %> - <%= billingDetails.pincode %>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr class="heading">
                <td>Description</td>
                <td>Unit Price</td>
                <td>Quantity</td>
                <td>Discount</td>
                <td>Net Amount</td>
                <td>Tax Rate</td>
                <td>Tax Amount</td>
                <td>Total Amount</td>
            </tr>
            <% items.forEach(item => { %>
            <tr class="item">
                <td><%= item.description %></td>
                <td><%= item.unitPrice %></td>
                <td><%= item.quantity %></td>
                <td><%= item.discount %></td>
                <td><%= item.netAmount %></td>
                <td>
                    <% if (item.taxRate.CGST) { %>
                        CGST: <%= item.taxRate.CGST * 100 %>%<br>
                        SGST: <%= item.taxRate.SGST * 100 %>%
                    <% } else { %>
                        IGST: <%= item.taxRate.IGST * 100 %>%
                    <% } %>
                </td>
                <td>
                    <% if (item.taxAmount.CGST) { %>
                        CGST: <%= item.taxAmount.CGST %><br>
                        SGST: <%= item.taxAmount.SGST %>
                    <% } else { %>
                        IGST: <%= item.taxAmount.IGST %>
                    <% } %>
                </td>
                <td><%= item.totalAmount %></td>
            </tr>
            <% }) %>
            <tr class="total">
                <td colspan="7"></td>
                <td>Total: <%= totalAmount %></td>
            </tr>
        </table>
        <br>
        <br>
        <br>
        <div style="text-align: right;">
            For <%= sellerDetails.name %>:
            <img src="<%= signatureImage %>" alt="Signature" style="width: 150px;">
            <br>
            Authorised Signatory
        </div>
    </div>
</body>
</html>
